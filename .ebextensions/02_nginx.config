files:
  /etc/nginx/conf.d/streamlit.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream streamlit {
          server 127.0.0.1:8501;
      }
      
      upstream frontend {
          server 127.0.0.1:3000;
      }
      
      server {
          listen 8080;
          
          # Frontend dev server (port 3000)
          location /frontend/ {
              proxy_pass http://frontend/;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
          
          # FastAPI routes
          location /api/ {
              proxy_pass http://127.0.0.1:8000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
          
          # Streamlit WebSocket and HTTP
          location /streamlit/ {
              proxy_pass http://streamlit/streamlit/;
              proxy_http_version 1.1;
              proxy_set_header Upgrade $http_upgrade;
              proxy_set_header Connection "upgrade";
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
              proxy_read_timeout 86400;
          }
          
          location /streamlit/_stcore/stream {
              proxy_pass http://streamlit/streamlit/_stcore/stream;
              proxy_http_version 1.1;
              proxy_set_header Upgrade $http_upgrade;
              proxy_set_header Connection "upgrade";
              proxy_set_header Host $host;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_read_timeout 86400;
          }
          
          # Default - FastAPI serves static files
          location / {
              proxy_pass http://127.0.0.1:8000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
      }

container_commands:
  01_reload_nginx:
    command: "sudo systemctl reload nginx || true"
